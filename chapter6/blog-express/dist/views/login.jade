extends layout

block page
    - var menu = 'login'

block content
    .col-md-4.col-md-offset-4
        h2 Log in
        if message.length > 0
            div.alert.alert-danger= message
        div
            form(action="/login", method="POST")
                p
                    input.form-control(name="email", type="text", placeholder="hi@seet.me")
                p
                    input.form-control(name="password", type="password", placeholder="*****")
                p
                    button.btn.btn-lg.btn-primary.btn-block(type="submit") Login
        hr
        p Need an account?&nbsp;
            a(href="/signup") Signup
        p Or go&nbsp;
            a(href="/") home.
