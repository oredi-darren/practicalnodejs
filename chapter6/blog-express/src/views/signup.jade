extends layout
block page
    - var menu = 'signup'
block content
    .col-md-4.col-md-offset-4
        h2 Signup
        if message.length > 0
            div.alert.alert-danger= message
        div
            form(action="/signup", method="POST")
                p
                    input.form-control(name="email", type="text", placeholder="hi@seet.me", required)
                p
                    input.form-control(name="password", type="password", placeholder="*****", required)
                p
                    button.btn.btn-lg.btn-primary.btn-block(type="submit") Signup
        hr
        p Already have an account?&nbsp;
            a(href="/login") Login
        p Or go&nbsp;
            a(href="/") home.
